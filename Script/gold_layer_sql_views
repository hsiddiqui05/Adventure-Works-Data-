-----------------------------------
-- Creating Gold Layer Views
-- CALENDAR
-----------------------------------
GO
CREATE OR ALTER VIEW goldlayer.calendar
AS
SELECT *
FROM OPENROWSET
(
    BULK 'https://awsresourcegroup05.blob.core.windows.net/silver/AdventureWorks_Calendar/',
    FORMAT = 'PARQUET'
) AS src;
GO

